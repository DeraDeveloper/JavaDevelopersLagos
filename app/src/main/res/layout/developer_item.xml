<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:elevation="@dimen/card_elevation"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cover"
            android:layout_width="@dimen/civ_layout_dimension"
            android:layout_height="@dimen/civ_layout_dimension"
            app:civ_border_width="@dimen/civ_border_width"
            app:civ_border_color="@color/colorCardViewBorder"
            android:layout_marginTop="@dimen/margin_size_extra_small"
            android:layout_marginLeft="@dimen/margin_size_medium"
            android:layout_marginStart="@dimen/margin_size_small"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="@string/username"
            android:layout_toRightOf="@id/cover"
            android:layout_toEndOf="@id/cover"
            android:layout_marginStart="@dimen/margin_size_medium"
            android:layout_marginLeft="@dimen/margin_size_medium"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/githublink1"
            android:layout_toRightOf="@id/cover"
            android:layout_toEndOf="@id/cover"
            android:layout_marginLeft="@dimen/margin_size_medium"
            android:layout_marginStart="@dimen/margin_size_medium"
            android:layout_marginTop="@dimen/margin_size_medium"
            android:layout_below="@id/title"
            android:visibility="invisible"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>