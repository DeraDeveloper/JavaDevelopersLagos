<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorAppBackground">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userimageheader"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:civ_border_width="2dp"
        android:backgroundTint="@color/colorAccent"
        app:civ_border_color="@color/colorCardViewBorder" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_user_name"
        android:layout_below="@id/userimageheader" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_toRightOf="@id/header"
        android:layout_toEndOf="@id/header"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/userimageheader"
        tools:text="Segun Famisa"
        android:textColor="@color/colorAccent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/githublink"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_link_address"
        android:layout_below="@id/username" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/link"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/githublink"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingTop="6dp"
        android:layout_below="@id/username"
        tools:text="http://www.github.com/divincoder"/>

</RelativeLayout>